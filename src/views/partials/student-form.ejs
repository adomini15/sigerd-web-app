<div class="form-group d-flex flex-row w-100 gap-3">
  <div class="form-floating col-md-4">
    <input type="text" name="firstname" id="firstname" class="form-control" placeholder="Nombre"
      value="<%= student?.firstname ?? '' %>">
    <label for="floatingInput">Nombre</label>

    <div class="alert alert-danger mt-2 d-none" role="alert">
    </div>
  </div>

  <div class="form-floating col-md-4">
    <input type="text" name="lastname" id="lastname" class="form-control" placeholder="Apellido"
      value="<%= student?.lastname ?? '' %>">
    <label for="floatingInput">Apellido</label>

    <div class="alert alert-danger mt-2 d-none" role="alert">
    </div>
  </div>

</div>

<div class="form-group d-flex flex-row w-100 gap-3">
  <div class="form-floating col-md-8">
    <input type="number" name="age" id="age" class="form-control" placeholder="Edad" value="<%= student?.age ?? '' %>">
    <label for="floatingInput">Edad</label>

    <div class="alert alert-danger mt-2 d-none" role="alert">
    </div>
  </div>
</div>

<div class="form-group d-flex flex-row w-100 gap-3">
  <div class="form-floating col-md-8">
    <textarea class="form-control" type="text" name="address" id="address" class="form-control"
      placeholder="Dirección"><%= student?.address ?? '' %></textarea>
    <label for="floatingInput">Dirección</label>

    <div class="alert alert-danger mt-2 d-none" role="alert">
    </div>
  </div>
</div>

<div class="form-group d-flex flex-row w-100 gap-3">
  <div class="form-floating col-md-4 d-flex">
    <div>
      <div class="form-check form-check-inline">
        <input checked class="form-check-input" type="radio" name="gender" id="male" value="M">
        <label class="form-check-label" for="male">Chico</label>
      </div>

      <div class="form-check form-check-inline">
        <input <%=student?.gender=='F' ? 'checked' : '' %> class="form-check-input" type="radio" name="gender"
        id="female" value="F">
        <label class="form-check-label" for="female">Chica</label>
      </div>
    </div>
  </div>

  <div class="form-floating col-md-4 d-flex">
    <div class="form-check">
      <input class="form-check-input" <%=student?.declared=='Y' ? 'checked' : '' %> type="checkbox" name="declared"
      id="declared">
      <label class="form-check-label" for="declared">
        Declarado
      </label>
    </div>
  </div>
</div>


<div class="form-group d-flex flex-row w-100 gap-3">
  <div class="form-floating col-md-8">
    <input type="text" name="nationality" id="nationality" class="form-control" placeholder="Nacionalidad"
      value="<%= student?.nationality ?? '' %>">
    <label for="floatingInput">Nacionalidad</label>

    <div class="alert alert-danger mt-2 d-none" role="alert">
    </div>
  </div>
</div>


<div class="d-flex mt-5">
  <button class="w-25 btn btn-outline-primary" type="submit">Guardar Cambios</button>
</div>